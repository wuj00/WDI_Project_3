<style>
  body {
    background-color: black;
    background-image: url("/assets/images/Logo-text-lowopacity.png");
    background-position: center;
    background-attachment: fixed;
    background-size: 100%;
    background-repeat: no-repeat;
  }
  .container{
    /*background-color: #455a64;*/
    box-shadow: white;
    width: 600px;
    padding: 50px;
  }
  a {
    color: #ffd54f;
  }
  /*.my-img img {
    width: 100%;
    position: center;
    opacity: 0.8;
  }*/
  div .option {
    display: inline-block;
    text-align: left;
  }
/*~~~~~~~~~~~ for input forms ~~~~~~~~~~~~~~~~*/
  .input-field label {
    font-size: 0.8rem;
    color: white;
  }
  label {
    color: white;
  }
  input[type=name], input[type=password], input[type=email], textarea.materialize-textarea {
    border-bottom: 1px solid white;
  }
  input[type=name]:focus:not([readonly])+label, input[type=email]:focus:not([readonly])+label, input[type=password]:focus:not([readonly])+label {
    color: #ffd54f;
   }
  input[type=name]:focus:not([readonly]), input[type=email]:focus:not([readonly]), input[type=password]:focus:not([readonly]) {
    color: white;
    border-bottom: 1px solid #ffd54f;
    box-shadow: 0 1px 0 0 #ffd54f;
   }
  input[type="radio"]:not(:checked)+label::before {
    border: 2px solid white;
  }
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/

/*~~~~~~~~~~ for horizonal line ~~~~~~~~~~~*/
  .subtitle {
  font-size: 30px;
  }
  .fancy {
    overflow: hidden;
    text-align: center;
  }
  .fancy span {
    position: relative;
  }
  .fancy span:before, .fancy span:after {
    content: "";
    position: absolute;
    border-bottom: 1px solid white;
    border-top: 1px solid white;
    width: 600px;
    height: 7px;
    top: 50%;
    margin-top: -4px;
  }
  .fancy span:before {
    right: 100%;
    margin-right: 15px;
  }
  .fancy span:after {
    left: 100%;
    margin-left: 15px;
  }
  /*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
  div.btn-center {
    text-align: center;
  }
  p {
    margin-bottom: -10px;
  }
  .btn-primary {
    background-color: #3b5998;
  }
</style>

<body>

<!-- ~~~~~~~~~~~~~ NAVBAR ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  <div class="navbar-fixed" id="signup-nav">
    <nav>
      <div class="nav-wrapper">
        <a href="/map"><img src="/assets/images/Logo-text-white.png" class="nav-img2"></a>
      </div>
    </nav>
  </div>

<!-- ~~~~~~~~~~~~SIGNUP FORMS~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->


<div class="container">
  <div class="text-center col-md-8 col-md-offset-2">
    <br>
    <h3>SIGNUP</h4>
    <br>

    <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">
      <form class="form-content" action="/signup" method="post">
        <div class="row">
          <div class="input-field col s6">
            <input id="username" type="text" class="input" name="name">
            <label for="username">Username</label>
          </div>
          <div class="input-field col s6">
            <input id="email" type="email" class="input" name="email">
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="input" name="password">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password_confirm" type="password" class="input">
            <label for="password_confirm">Password Confirm</label>
          </div>
        </div>
<!--~~~~~~~~~~~~~~~~~~ gender options ~~~~~~~~~~~~~~~~~~~~~~~-->
        <div class="row">
          <div class="options">
            <p class="opt-group">
              <input class="with-gap" name="group1" type="radio" id="male">
              <label for="male">Male</label>
            </p>
            <p class="opt-group">
              <input class="with-gap" name="group1" type="radio" id="female">
              <label for="female">Female</label>
            </p>
            <p class="opt-group">
              <input class="with-gap" name="group1" type="radio" id="other">
              <label for="other">Other</label>
            </p>
          </div>
        </div>
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <div class="btn-center">
        <button type="submit" class="btn waves-effect waves-light btn-large"><font size="5">Join Now!</font></button>
      </div>
      </form>
    </div>
    <br>
    <p class="subtitle fancy"><span><strong>OR</strong></span></p>
    <div class="btn-center">
      <h6> Login with </h6><br><a href="/auth/facebook" class="btn waves-effect waves-light btn-primary" style="background-color: #3b5998;">FACEBOOK</a>
    </div>
    <br>
    <p>Already have an account? <a href="/login">Login!</a></p>
    <p>Go back <a href="/">home.</a></p>
  </div>
